---
// Instructors section with static grid layout

const instructors = [
  {
    name: "Hart Hillman",
    image: "/images/HartHillman.jpeg",
    title: "Northern Karate Princeton Director",
    subtitle: "Black Belt 4th Dan<br>30 years experience"
  },
  {
    name: "<a href='https://m-beau.github.io' target='_blank' style='color: white;'>Maxime Beau</a>",
    image: "/images/MaximeBeau.jpg",
    title: "Northern Karate Princeton Senior Instructor",
    subtitle: "Black Belt 2nd Dan<br>16 years experience"
  },
  {
    name: "Chanasya Muthukumar",
    image: "/images/her.jpeg",
    title: "Northern Karate Princeton Junior Instructor",
    subtitle: "Black Belt 3rd Dan"
  },
  {
    name: "Thithikshan Muthukumar",
    image: "/images/him.jpeg",
    title: "Northern Karate Princeton Junior Instructor",
    subtitle: "Black Belt 2nd Dan"
  }
];
---

<section id="instructors" class="instructors section">
  <div class="container">
    <h2 class="text-center">Meet Your <span class="text-red">Instructors</span></h2>
    <p class="section-intro text-center">
      Our certified black belt instructors bring decades of experience and passion to every class.
    </p>

    <div class="instructors-grid">
      {instructors.map((instructor) => (
        <div class="instructor-card">
          <div class="instructor-image-wrapper">
            <img src={instructor.image} alt={instructor.name} class="instructor-image" />
            <div class="instructor-overlay">
              <h3 class="instructor-name" set:html={instructor.name}></h3>
              <p class="instructor-title">{instructor.title}</p>
              <p class="instructor-subtitle" set:html={instructor.subtitle}></p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .instructors {
    background: var(--nks-charcoal);
  }

  .section-intro {
    max-width: 600px;
    margin: 0 auto var(--space-lg);
    color: #aaa;
    font-size: 1.1rem;
  }

  .instructors-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
  }

  .instructor-card {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    transition: transform var(--transition-normal);
  }

  .instructor-card:hover {
    transform: translateY(-4px);
  }

  .instructor-image-wrapper {
    position: relative;
    width: 100%;
    aspect-ratio: 3/4;
    background: linear-gradient(135deg, var(--nks-charcoal) 0%, #222 100%);
    overflow: hidden;
  }

  .instructor-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .instructor-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0) 0%,
      rgba(0, 0, 0, 0.3) 50%,
      rgba(0, 0, 0, 0.95) 100%
    );
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: center;
    text-align: center;
    padding: 1.5rem 1rem;
  }

  .instructor-name {
    font-family: var(--font-heading);
    font-size: 1.75rem;
    color: white;
    margin: 0 0 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.8);
  }

  .instructor-title {
    font-size: 0.85rem;
    color: var(--nks-red);
    margin: 0 0 0.25rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 600;
    line-height: 1.3;
  }

  .instructor-subtitle {
    font-size: 0.9rem;
    color: white;
    margin: 0;
    letter-spacing: 0.05em;
    font-weight: 500;
    opacity: 0.9;
  }

  @media (max-width: 1024px) {
    .instructors-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .instructors-grid {
      grid-template-columns: 1fr;
      max-width: 400px;
      margin: 0 auto;
    }

    .instructor-name {
      font-size: 1.5rem;
    }

    .instructor-title {
      font-size: 0.75rem;
    }

    .instructor-subtitle {
      font-size: 0.85rem;
    }
  }
</style>
