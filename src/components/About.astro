<style>
  .about {
    position: relative;
  }
  
  .about-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-lg);
    align-items: center;
    margin-bottom: var(--space-xl);
  }
  
  .about-content h2 {
    margin-bottom: var(--space-sm);
  }
  
  .about-lead {
    font-size: 1.2rem;
    color: #ccc;
    margin-bottom: 1.5rem;
  }
  
  .about-content p {
    color: #aaa;
    margin-bottom: 1rem;
  }
  
  .about-stats {
    display: flex;
    gap: 2rem;
    margin-top: var(--space-md);
    padding-top: var(--space-md);
    border-top: 1px solid #333;
  }
  
  .stat {
    text-align: center;
  }
  
  .stat-number {
    display: block;
    font-family: var(--font-heading);
    font-size: 2.5rem;
    color: var(--nks-red);
    line-height: 1;
  }
  
  .stat-label {
    font-size: 0.85rem;
    color: #888;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .about-image {
    position: relative;
  }
  
  .image-placeholder {
    aspect-ratio: 4/3;
    background: linear-gradient(135deg, var(--nks-charcoal) 0%, #222 100%);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid #333;
  }
  
  .image-placeholder span {
    font-size: 6rem;
    opacity: 0.1;
    color: white;
  }
  
  .benefits {
    padding-top: var(--space-lg);
    border-top: 1px solid #333;
  }
  
  .benefits h3 {
    color: white;
  }
  
  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: 1.5rem;
  }
  
  .benefit {
    text-align: center;
    padding: 1.5rem 1rem;
    background: rgba(255, 255, 255, 0.03);
    border-radius: 8px;
    border: 1px solid #333;
    transition: all var(--transition-normal);
  }
  
  .benefit:hover {
    background: rgba(196, 18, 48, 0.1);
    border-color: var(--nks-red);
  }
  
  .benefit-icon {
    font-size: 2rem;
    display: block;
    margin-bottom: 0.75rem;
  }
  
  .benefit h4 {
    font-size: 1rem;
    margin-bottom: 0.5rem;
    color: white;
  }
  
  .benefit p {
    font-size: 0.85rem;
    color: #888;
    margin: 0;
  }
  
  @media (max-width: 768px) {
    .about-grid {
      grid-template-columns: 1fr;
    }

    .about-image {
      order: -1;
    }

    .about-stats {
      justify-content: center;
    }

    .benefits-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
