---
// Hero section with CTA - main landing area
interface Props {
  title?: string;
  subtitle?: string;
  ctaText?: string;
  ctaLink?: string;
}

const {
  title = "Learn Comprehensive Martial Arts in Princeton, NJ",
  subtitle = "Learn self-defense, build confidence, and get in the best shape of your life. Join the Northern Karate Schools family.",
  ctaText = "Start Your Free Trial",
  ctaLink = "#contact"
} = Astro.props;
---

<section class="hero">
  <div class="hero-bg"></div>
  <div class="hero-overlay"></div>
  
  <div class="container hero-content">
    <div class="hero-badge">Part of Northern Karate Schools ¬∑ Since 1972</div>
    <h1 class="hero-title">{title}</h1>
    <p class="hero-subtitle">{subtitle}</p>
    <div class="hero-cta">
      <a href={ctaLink} class="btn btn-primary">{ctaText}</a>
      <a href="#programs" class="btn btn-secondary">View Programs</a>
    </div>
    
    <div class="hero-features">
      <div class="hero-feature">
        <span class="feature-icon">ü•ã</span>
        <span>All Ages Welcome</span>
      </div>
      <div class="hero-feature">
        <span class="feature-icon">‚≠ê</span>
        <span>Expert Instructors</span>
      </div>
      <div class="hero-feature">
        <span class="feature-icon">üìç</span>
        <span>Princeton, NJ</span>
      </div>
    </div>
  </div>
  
  <!-- Decorative kanji -->
  <div class="hero-kanji" aria-hidden="true">Ê≠¶ÈÅì</div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    padding-top: 80px;
  }
  
  .hero-bg {
    position: absolute;
    inset: 0;
    /* Placeholder - replace with actual hero image */
    background: 
      linear-gradient(135deg, var(--nks-black) 0%, var(--nks-charcoal) 100%);
    background-size: cover;
    background-position: center;
  }
  
  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(26, 26, 26, 0.7) 0%,
      rgba(26, 26, 26, 0.85) 100%
    );
  }
  
  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    color: white;
    padding: var(--space-lg) var(--space-sm);
    max-width: 900px;
  }
  
  .hero-badge {
    display: inline-block;
    padding: 0.5rem 1.25rem;
    background: rgba(196, 18, 48, 0.2);
    border: 1px solid var(--nks-red);
    border-radius: 100px;
    font-size: 0.85rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin-bottom: var(--space-md);
    animation: fadeInUp 0.6s ease forwards;
  }
  
  .hero-title {
    font-size: clamp(2.5rem, 8vw, 5rem);
    margin-bottom: var(--space-sm);
    animation: fadeInUp 0.6s ease 0.1s forwards;
    opacity: 0;
  }
  
  .hero-subtitle {
    font-size: 1.25rem;
    max-width: 600px;
    margin: 0 auto var(--space-md);
    color: #ccc;
    animation: fadeInUp 0.6s ease 0.2s forwards;
    opacity: 0;
  }
  
  .hero-cta {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    animation: fadeInUp 0.6s ease 0.3s forwards;
    opacity: 0;
  }
  
  .hero-features {
    display: flex;
    gap: 2rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-top: var(--space-lg);
    animation: fadeInUp 0.6s ease 0.4s forwards;
    opacity: 0;
  }
  
  .hero-feature {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.95rem;
    color: #aaa;
  }
  
  .feature-icon {
    font-size: 1.25rem;
  }
  
  .hero-kanji {
    position: absolute;
    right: -5%;
    bottom: 10%;
    font-size: clamp(10rem, 25vw, 20rem);
    font-weight: 900;
    color: white;
    opacity: 0.03;
    pointer-events: none;
    line-height: 1;
    writing-mode: vertical-rl;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @media (max-width: 640px) {
    .hero-features {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>
